#include <iostream>
/* standard header file to include an array*/
#include<array>
using namespace std;

int main()
{
    int basic[3]={1,2,3};
    /*Initializing an array using stl */
    array<int ,4> a={1,2,3,4};

    int size=a.size();
    for(int i=0 ; i < size;i++)
    {
        cout<<a[i]<<endl;
    }
    cout<<"Element at second index "<<a.at(2)<<endl;
    cout<<"Empty array or not "<<a.empty()<<endl;
    cout<<"Element at first "<<a.front()<<endl;
    cout<<"Element at second "<<a.back()<<endl;
    return 0;
}
